{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceBusNamespaceName": {
      "type": "string",
      "metadata": {
        "description": "Service Bus Namespace Name"
      }
    }
  },
  "variables": {
    "apiVersion": "2017-04-01"
  },
  "resources": 
    {
      "apiVersion": "[variables('apiVersion')]",
      "name": "[parameters('serviceBusNamespaceName')]",
      "type": "Microsoft.ServiceBus/namespaces",
      "location": "[resourceGroup().location]",
      "properties": {},
      "resources": [
        {
          "type": "AuthorizationRules",
          "name": "Send",
          "apiVersion": "[variables('apiVersion')]",
          "scale": null,
          "properties": {
            "rights": [ "Send" ]
          },
          "dependsOn": [
            "[parameters('serviceBusNamespaceName')]"
          ]
        },
        {
          "type": "AuthorizationRules",
          "name": "Listen",
          "apiVersion": "[variables('apiVersion')]",
          "scale": null,
          "properties": {
            "rights": [ "Listen" ]
          },
          "dependsOn": [
            "[parameters('serviceBusNamespaceName')]"
          ]
        },
        {
          "type": "AuthorizationRules",
          "name": "SendListen",
          "apiVersion": "[variables('apiVersion')]",
          "scale": null,
          "properties": {
            "rights": [ "Listen", "Send" ]
          },
          "dependsOn": [
            "[parameters('serviceBusNamespaceName')]"
          ]
        },
        {
          "type": "AuthorizationRules",
          "name": "Manage",
          "apiVersion": "[variables('apiVersion')]",
          "scale": null,
          "properties": {
            "rights": [ "Listen", "Send", "Manage" ]
          },
          "dependsOn": [
            "[parameters('serviceBusNamespaceName')]"
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "BasicQueue",
          "type": "queues",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": []
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "BasicQueue2",
          "type": "queues",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": []
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "SessionQueue",
          "type": "queues",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {
            "requiresSession": true,
            "supportOrdering": true
          },
          "resources": []
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "DupdetectQueue",
          "type": "queues",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {
            "requiresDuplicateDetection": true,
            "duplicateDetectionHistoryTimeWindow" :  "T10M"
          },
          "resources": []
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "PartitionedQueue",
          "type": "queues",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {
            "enablePartitioning": true
          },
          "resources": []
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "BasicTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription1",
              "type": "subscriptions",
              "dependsOn": [ "BasicTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription2",
              "type": "subscriptions",
              "dependsOn": [ "BasicTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription3",
              "type": "subscriptions",
              "dependsOn": [ "BasicTopic" ],
              "properties": {},
              "resources": []
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "BasicTopic2",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription1",
              "type": "subscriptions",
              "dependsOn": [ "BasicTopic2" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription2",
              "type": "subscriptions",
              "dependsOn": [ "BasicTopic2" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription3",
              "type": "subscriptions",
              "dependsOn": [ "BasicTopic2" ],
              "properties": {},
              "resources": []
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "DupdetectTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {
            "requiresDuplicateDetection": true
          },
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription1",
              "type": "subscriptions",
              "dependsOn": [ "DupdetectTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription2",
              "type": "subscriptions",
              "dependsOn": [ "DupdetectTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription3",
              "type": "subscriptions",
              "dependsOn": [ "DupdetectTopic" ],
              "properties": {},
              "resources": []
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "PrePublishFilterTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {
            "enableFilteringMessagesBeforePublishing": true
          },
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription1",
              "type": "subscriptions",
              "dependsOn": [ "PrePublishFilterTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription2",
              "type": "subscriptions",
              "dependsOn": [ "PrePublishFilterTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription3",
              "type": "subscriptions",
              "dependsOn": [ "PrePublishFilterTopic" ],
              "properties": {},
              "resources": []
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "PartitionedTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {
            "supportOrdering": false,
            "enablePartitioning": true
          },
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription1",
              "type": "subscriptions",
              "dependsOn": [ "PartitionedTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription2",
              "type": "subscriptions",
              "dependsOn": [ "PartitionedTopic" ],
              "properties": {},
              "resources": []
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Subscription3",
              "type": "subscriptions",
              "dependsOn": [ "PartitionedTopic" ],
              "properties": {},
              "resources": []
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "PrioritySubscriptionsTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Priority1Subscription",
              "type": "subscriptions",
              "dependsOn": [ "PrioritySubscriptionsTopic" ],
              "properties": {},
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "Priority1Subscription" ],
                  "properties": {
                    "filterType": "SqlFilter",
                    "sqlFilter": {
                      "sqlExpression": "Priority = 1",
                      "requiresPreprocessing": false
                    }
                  }
                }
              ]
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Priority2Subscription",
              "type": "subscriptions",
              "dependsOn": [ "PrioritySubscriptionsTopic" ],
              "properties": {},
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "Priority2Subscription" ],
                  "properties": {
                    "filterType": "SqlFilter",
                    "sqlFilter": {
                      "sqlExpression": "Priority = 2",
                      "requiresPreprocessing": false
                    }
                  }
                }
              ]
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "PriorityGreaterThan2Subscription",
              "type": "subscriptions",
              "dependsOn": [ "PrioritySubscriptionsTopic" ],
              "properties": {
              },
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "PriorityGreaterThan2Subscription" ],
                  "properties": {
                    "filterType": "SqlFilter",
                    "sqlFilter": {
                      "sqlExpression": "Priority > 2",
                      "requiresPreprocessing": false
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "TopicFilterSampleTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "AllOrders",
              "type": "subscriptions",
              "dependsOn": [ "TopicFilterSampleTopic" ],
              "properties": {},
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "AllOrders" ],
                  "properties": {
                    "filterType": "SqlFilter",
                    "sqlFilter": {
                      "sqlExpression": "1=1",
                      "requiresPreprocessing": false
                    }
                  }
                }
              ]
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "ColorBlueSize10Orders",
              "type": "subscriptions",
              "dependsOn": [ "TopicFilterSampleTopic" ],
              "properties": {},
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "ColorBlueSize10Orders" ],
                  "properties": {
                    "filterType": "SqlFilter",
                    "sqlFilter": {
                      "sqlExpression": "color = 'blue' AND quantity = 10",
                      "requiresPreprocessing": false
                    }
                  }
                }
              ]
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "ColorRed",
              "type": "subscriptions",
              "dependsOn": [ "TopicFilterSampleTopic" ],
              "properties": {
              },
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "ColorRed" ],
                  "properties": {
                    "filterType": "SqlFilter",
                    "sqlFilter": {
                      "sqlExpression": "color = 'red'",
                      "requiresPreprocessing": false
                    },
                    "action": {
                      "sqlExpression": "SET quantity = quantity / 2; REMOVE priority; SET sys.CorrelationId = 'low';"
                    }
                  }
                }
              ]
            },
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "HighPriorityOrders",
              "type": "subscriptions",
              "dependsOn": [ "TopicFilterSampleTopic" ],
              "properties": {
              },
              "resources": [
                {
                  "apiVersion": "[variables('apiVersion')]",
                  "name": "rule1",
                  "type": "rules",
                  "dependsOn": [ "HighPriorityOrders" ],
                  "properties": {
                    "filterType": "CorrelationFilter",
                    "correlationFilter": {
                      "label": "red",
                      "correlationId": "high"
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "AutoForwardSourceTopic",
          "type": "topics",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "AutoForwardTargetQueue",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": [
            {
              "apiVersion": "[variables('apiVersion')]",
              "name": "Forwarder",
              "type": "subscriptions",
              "dependsOn": [ "AutoForwardSourceTopic" ],
              "properties": {
                "forwardTo": "AutoForwardTargetQueue"
              },
              "resources": []
            }
          ]
        },
        {
          "apiVersion": "[variables('apiVersion')]",
          "name": "AutoForwardTargetQueue",
          "type": "queues",
          "dependsOn": [
            "[concat('Microsoft.ServiceBus/namespaces/', parameters('serviceBusNamespaceName'))]",
            "Send",
            "Listen",
            "SendListen",
            "Manage"
          ],
          "properties": {},
          "resources": []
        }
      ]
    }
  ],
  "outputs": {
    "serviceBusNamespaceName": {
      "type": "string",
      "value": "[parameters('serviceBusNamespaceName')]"
    },
    "sendConnectionString": {
      "type": "string",
      "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/AuthorizationRules', parameters('serviceBusNamespaceName'), 'Send'),variables('apiVersion')).primaryConnectionString]"
    },
    "listenConnectionString": {
      "type": "string",
      "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/AuthorizationRules', parameters('serviceBusNamespaceName'), 'Listen'),variables('apiVersion')).primaryConnectionString]"
    },
    "sendListenConnectionString": {
      "type": "string",
      "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/AuthorizationRules', parameters('serviceBusNamespaceName'), 'SendListen'),variables('apiVersion')).primaryConnectionString]"
    },
    "manageConnectionString": {
      "type": "string",
      "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/AuthorizationRules', parameters('serviceBusNamespaceName'), 'Manage'),variables('apiVersion')).primaryConnectionString]"

    }
  }
}
